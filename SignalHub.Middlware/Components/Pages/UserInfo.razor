@page "/userinfo"
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>User Information - SignalHub</PageTitle>

<div class="container mt-4">
    <h1>User Information</h1>
    <hr />

    <AuthorizeView>
        <Authorized>
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">
                                <i class="bi bi-person-circle"></i> Profile Information
                            </h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Name:</dt>
                                <dd class="col-sm-9">@context.User.Identity?.Name</dd>

                                <dt class="col-sm-3">Authentication Type:</dt>
                                <dd class="col-sm-9">@context.User.Identity?.AuthenticationType</dd>

                                <dt class="col-sm-3">Is Authenticated:</dt>
                                <dd class="col-sm-9">
                                    @if (context.User.Identity?.IsAuthenticated == true)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header bg-info text-white">
                            <h4 class="mb-0">
                                <i class="bi bi-key-fill"></i> User Claims from HubexoID
                            </h4>
                        </div>
                        <div class="card-body">
                            @if (context.User.Claims.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th style="width: 30%">Claim Type</th>
                                                <th style="width: 70%">Value</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var claim in context.User.Claims.OrderBy(c => c.Type))
                                            {
                                                <tr>
                                                    <td>
                                                        <code class="text-primary">
                                                            @GetShortClaimType(claim.Type)
                                                        </code>
                                                    </td>
                                                    <td>
                                                        @if (claim.Type.Contains("picture") || claim.Type.Contains("avatar"))
                                                        {
                                                            <img src="@claim.Value" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px;" />
                                                        }
                                                        else if (claim.Type == "iat")
                                                        {
                                                            <span>@FormatTimestamp(claim.Value)</span>
                                                            <small class="text-muted"> (@claim.Value)</small>
                                                        }
                                                        else
                                                        {
                                                            <span>@claim.Value</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="alert alert-info mt-3">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Total Claims:</strong> @context.User.Claims.Count()
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    No claims found for this user.
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Quick Info</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <strong>Email:</strong><br />
                                    @(GetClaimValue(context.User, "email"))
                                </li>
                                <li class="mb-2">
                                    <strong>First Name:</strong><br />
                                    @(GetClaimValue(context.User, "given_name"))
                                </li>
                                <li class="mb-2">
                                    <strong>Last Name:</strong><br />
                                    @(GetClaimValue(context.User, "family_name"))
                                </li>
                                <li class="mb-2">
                                    <strong>Company:</strong><br />
                                    @(GetClaimValue(context.User, "company"))
                                </li>
                                <li class="mb-2">
                                    <strong>Role:</strong><br />
                                    <span class="badge bg-primary">@(GetClaimValue(context.User, "role"))</span>
                                </li>
                                <li class="mb-2">
                                    <strong>Subject (sub):</strong><br />
                                    <small class="text-muted text-break">@(GetClaimValue(context.User, "sub"))</small>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="alert alert-warning">
                <h4>Not Authenticated</h4>
                <p>You need to log in to view this page.</p>
                <a href="/login" class="btn btn-primary">Go to Login</a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>
