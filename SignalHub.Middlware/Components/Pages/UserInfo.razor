@page "/userinfo"
@using System.Security.Claims
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>User Information - SignalHub</PageTitle>

<div class="container mt-4">
    <h1>User Information</h1>
    <hr />

    <AuthorizeView>
        <Authorized>
            <div class="row">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header bg-primary text-white">
                            <h4 class="mb-0">
                                <i class="bi bi-person-circle"></i> Profile Information
                            </h4>
                        </div>
                        <div class="card-body">
                            <dl class="row">
                                <dt class="col-sm-3">Name:</dt>
                                <dd class="col-sm-9">@context.User.Identity?.Name</dd>

                                <dt class="col-sm-3">Authentication Type:</dt>
                                <dd class="col-sm-9">@context.User.Identity?.AuthenticationType</dd>

                                <dt class="col-sm-3">Is Authenticated:</dt>
                                <dd class="col-sm-9">
                                    @if (context.User.Identity?.IsAuthenticated == true)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header bg-info text-white">
                            <h4 class="mb-0">
                                <i class="bi bi-key-fill"></i> User Claims from HubexoID
                            </h4>
                        </div>
                        <div class="card-body">
                            @if (context.User.Claims.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped table-hover">
                                        <thead class="table-dark">
                                            <tr>
                                                <th style="width: 30%">Claim Type</th>
                                                <th style="width: 70%">Value</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var claim in context.User.Claims.OrderBy(c => c.Type))
                                            {
                                                <tr>
                                                    <td>
                                                        <code class="text-primary">@GetShortClaimType(claim.Type)</code>
                                                    </td>
                                                    <td>
                                                        @if (claim.Type.Contains("picture") || claim.Type.Contains("avatar"))
                                                        {
                                                            <img src="@claim.Value" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px;" />
                                                        }
                                                        else
                                                        {
                                                            <span>@claim.Value</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                                <div class="alert alert-info mt-3">
                                    <i class="bi bi-info-circle"></i>
                                    <strong>Total Claims:</strong> @context.User.Claims.Count()
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning">
                                    No claims found for this user.
                                </div>
                            }
                        </div>
                    </div>

                    <div class="card mt-4">
                        <div class="card-header bg-secondary text-white">
                            <h4 class="mb-0">
                                <i class="bi bi-shield-check"></i> Access Tokens
                            </h4>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">
                                Access tokens are stored securely in server-side cookies and are not exposed to the browser.
                            </p>
                            <div class="d-flex gap-2">
                                <a href="/auth/logout" class="btn btn-danger">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </a>
                                <a href="/" class="btn btn-secondary">
                                    <i class="bi bi-house"></i> Go Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Quick Info</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <strong>Email:</strong><br />
                                    @(context.User.FindFirst("email")?.Value ?? "N/A")
                                </li>
                                <li class="mb-2">
                                    <strong>Subject (sub):</strong><br />
                                    <small class="text-muted">@(context.User.FindFirst("sub")?.Value ?? "N/A")</small>
                                </li>
                                <li class="mb-2">
                                    <strong>Provider:</strong><br />
                                    @(context.User.FindFirst("iss")?.Value ?? "N/A")
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="card mt-3">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">Security</h5>
                        </div>
                        <div class="card-body">
                            <p class="small">
                                Your session is secured with:
                            </p>
                            <ul class="small">
                                <li>HTTPS encryption</li>
                                <li>Server-side token storage</li>
                                <li>OIDC authentication</li>
                                <li>Secure cookies</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </Authorized>
        <NotAuthorized>
            <div class="alert alert-warning">
                <h4>Not Authenticated</h4>
                <p>You need to log in to view this page.</p>
                <a href="/login" class="btn btn-primary">Go to Login</a>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</div>

@code {
    private string GetShortClaimType(string claimType)
    {
        // Remove common prefixes to make claim types more readable
        var prefixes = new[]
        {
            "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/",
            "http://schemas.microsoft.com/ws/2008/06/identity/claims/",
            "http://schemas.microsoft.com/identity/claims/"
        };

        foreach (var prefix in prefixes)
        {
            if (claimType.StartsWith(prefix))
            {
                return claimType.Substring(prefix.Length);
            }
        }

        return claimType;
    }
}
