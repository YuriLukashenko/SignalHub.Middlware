@page "/signedout"
@using SignalHub.Middlware.Components.Layout
@layout MainLayout
@inject NavigationManager Navigation

<div class="signedout-container">
    <div class="signedout-card">
        <div class="signedout-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <h1>You have been signed out</h1>
        <p>Thank you for using SignalHub. You have been successfully signed out of your account.</p>
        
        <div class="signedout-actions">
            <button class="btn-primary" @onclick="NavigateHome">
                <i class="bi bi-house"></i> Go Home
            </button>
            <button class="btn-secondary" @onclick="SignInAgain">
                <i class="bi bi-box-arrow-in-right"></i> Sign In Again
            </button>
        </div>
        
        <div class="security-note">
            <i class="bi bi-shield-check"></i>
            <span>For your security, please close all browser windows if you're using a shared computer.</span>
        </div>
    </div>
</div>

@code {
    private void NavigateHome()
    {
        Navigation.NavigateTo("/", forceLoad: true);
    }

    private void SignInAgain()
    {
        Navigation.NavigateTo("/auth/login", forceLoad: true);
    }
    
    protected override async Task OnInitializedAsync()
    {
        //NavigateHome();
    }
}

<style>
    .signedout-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 100px);
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .signedout-card {
        background: white;
        border-radius: 16px;
        padding: 48px;
        max-width: 480px;
        width: 100%;
        text-align: center;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15);
    }

    .signedout-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #10b981;
        border-radius: 50%;
        color: white;
        font-size: 40px;
    }

    .signedout-card h1 {
        color: #1f2937;
        margin-bottom: 16px;
        font-size: 28px;
        font-weight: 600;
    }

    .signedout-card p {
        color: #6b7280;
        margin-bottom: 32px;
        line-height: 1.6;
    }

    .signedout-actions {
        display: flex;
        gap: 16px;
        justify-content: center;
        margin-bottom: 32px;
    }

    .btn-primary,
    .btn-secondary {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-primary {
        background: #4f46e5;
        color: white;
    }

    .btn-primary:hover {
        background: #4338ca;
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(79, 70, 229, 0.3);
    }

    .btn-secondary {
        background: #f3f4f6;
        color: #4b5563;
    }

    .btn-secondary:hover {
        background: #e5e7eb;
        transform: translateY(-2px);
    }

    .security-note {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 16px;
        background: #fef3c7;
        border-radius: 8px;
        font-size: 14px;
        color: #92400e;
    }

    .security-note i {
        font-size: 18px;
        color: #f59e0b;
    }
</style>
