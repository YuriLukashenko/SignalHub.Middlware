@page "/signedout"
@using SignalHub.Middlware.Components.Layout
@layout MainLayout
@inject NavigationManager Navigation

<div class="signedout-container">
    <div class="signedout-card">
        <div class="signedout-icon signedout-bi-check-circle-fill">
        </div>
        <h1>You have been signed out</h1>
        <p>Thank you for using SignalHub. You have been successfully signed out of your account.</p>
        
        <div class="signedout-actions">
            <button class="btn-primary" @onclick="NavigateHome">
                <i class="bi bi-house"></i> Go Home
            </button>
            <button class="btn-secondary" @onclick="SignInAgain">
                <i class="bi bi-box-arrow-in-right"></i> Sign In Again
            </button>
        </div>
        
        <div class="security-note">
            <span>For your security, please close all browser windows if you're using a shared computer.</span>
        </div>
    </div>
</div>
